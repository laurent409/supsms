<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.supinfo.boutrig.supsms.AboutActivity"
    android:orientation="vertical">

    <TextView android:text="@string/aboutContentOne" android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"/>
    <TextView android:text="@string/aboutContentTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content" android:layout_marginTop="30dp"
        android:text="@string/aboutContentThree" android:textSize="40dp"/>
    <TextView
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content" android:layout_marginTop="15dp"
        android:text="@string/aboutContentFour" android:textSize="20dp"/>

</LinearLayout>
